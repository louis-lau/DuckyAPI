{
  "name": "ducky-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "build": "webpack --color --config webpack.config.prod.js",
    "build:dev": "webpack --color --config webpack.config.dev.js",
    "start": "wait-on dist/server.js && node dist/server",
    "start:debug": "wait-on dist/server.js && node --inspect-brk dist/server",
    "buildstart": "npm-run-all --silent --print-label clean build start",
    "buildstart:dev": "npm-run-all --silent --print-label clean --parallel build:dev start",
    "buildstart:debug": "npm-run-all --silent --print-label clean --parallel build:dev start:debug",
    "lint": "npm-run-all --silent --print-label lint:tsc lint:eslint",
    "lint:fix": "npm-run-all --silent --print-label lint:tsc lint:eslintfix",
    "lint:tsc": "tsc --noEmit -p tsconfig.build.json",
    "lint:eslint": "eslint --color --max-warnings 0 ./ --ext ts",
    "lint:eslintfix": "eslint --fix --color --max-warnings 0 ./ --ext ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/mongoose": "^6.1.2",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.0.0",
    "@nestjs/swagger": "^3.1.0",
    "bcrypt": "^3.0.6",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.9.1",
    "helmet": "^3.19.0",
    "mongoose": "^5.6.5",
    "mongoose-lean-id": "^0.2.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "swagger-ui-express": "^4.0.7"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.0.0",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.16.0",
    "@types/helmet": "0.0.43",
    "@types/jest": "^23.3.13",
    "@types/mongoose": "^5.5.9",
    "@types/node": "^10.12.18",
    "@types/passport-jwt": "^3.0.1",
    "@types/supertest": "^2.0.7",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.13.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-simple-import-sort": "^4.0.0",
    "jest": "^24.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "prettier-eslint": "^9.0.0",
    "supertest": "^3.4.1",
    "ts-jest": "24.0.2",
    "ts-loader": "^6.0.4",
    "ts-node": "8.1.0",
    "tsconfig-paths": "3.8.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "5.16.0",
    "typescript": "3.4.3",
    "wait-on": "^3.2.0",
    "webpack": "^4.38.0",
    "webpack-cli": "^3.3.6",
    "webpack-merge": "^4.2.1",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
